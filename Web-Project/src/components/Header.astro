---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<header class="w-full h-1/6 min-h-24 bg-Vblue bg-opacity-80 font-inter flex justify-center items-center">
    <h1 class="w-fit h-auto text-5xl text-Vheader font-inter font-bold brightness-100" style="filter:drop-shadow(0 0 20px #fff)">
        { title }
    </h1>
</header>